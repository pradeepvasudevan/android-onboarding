<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
                android:id="@+id/startUrlOnboardingUrl"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textUri"
                android:hint="URL"/>

        <Button
                android:id="@+id/startUrlOnboardingLib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onStartUrlOnboarding"
                android:text="@string/start_url" />

        <TableRow
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"></TableRow>

        <Button
            android:id="@+id/startPCAOnboardingLib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onStartPCAOnboarding"
            android:text="@string/start_pca_onboarding" />

        <Button
            android:id="@+id/startBCAOnboardingLib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onStartBCAOnboarding"
            android:text="@string/start_bca_onboarding" />

        <Button
            android:id="@+id/jsInterfaceTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="onJavascriptInterfaceTest"
            android:text="@string/javascript_interface_test" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Env: Dev"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</RelativeLayout>